<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/navMain">

    <fragment
        android:id="@+id/navMain"
        android:name="btu.finalexam.georgegigauri.ui.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_addCarFragment"
            app:destination="@id/navSettings"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/navSettings"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/navAddCar"
        android:name="btu.finalexam.georgegigauri.ui.AddCarFragment"
        android:label="AddCarFragment" >
        <action
            android:id="@+id/action_addCarFragment_to_settingsFragment"
            app:destination="@id/navSettings"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_addCarFragment_to_homeFragment"
            app:destination="@id/navMain"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/navSettings"
        android:name="btu.finalexam.georgegigauri.ui.SettingsFragment"
        android:label="SettingsFragment"
        app:enterAnim="@animator/nav_default_pop_enter_anim"
        app:exitAnim="@animator/nav_default_pop_exit_anim" >
        <action
            android:id="@+id/action_settingsFragment_to_addCarFragment"
            app:destination="@id/navAddCar"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/navAddCar"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>
</navigation>